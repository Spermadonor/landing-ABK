*, *::before, *::after
    box-sizing border-box

body
    font 15px 'Roboto', sans-serif
a
    text-decoration none

.container
    max-width 1170px
    margin 0 auto
header
    overflow hidden
.head-foot
    row-flex()
    align-items center
    /&__logo, /&__menu, /&__svyz, /&__btn
        col()
    /&__logo
        size(2)
    /&__menu
        size(6)
        a
            color black
    /&__svyz
        size(2)
        padding-top 15px
        text-align right
    /&__btn
        size(2)
        margin-top 3px
        /&:hover
            background-color #0f8ec7 - 30
    
    /&__logo
        font-size 41px
        font-weight bold
        font-style italic

.logo_blue
    color #0f8ec7
.menu
    flex()
    margin-left -10.5px
    margin-right -10.5px
    justify-content flex-end
    font-weight bold
    text-transform uppercase
    /&__item
        position relative
        margin-left 10.5px
        margin-right 10.5px
        /&::after
            width 0
            height 2px
            position absolute
            left 0
            bottom -3.3px
            content ''
            background-color #0f8ec7
        /&:hover::after
            width 100%
            trans()

.svyz
    /&__tel
        display inline-block
        padding-left 8px
        padding-bottom 5px
        border-bottom 1px solid #0f8ec7
        font-size 16px
        font-weight 500
    /&__soc
        padding-top 7px
        a
            margin-left 10px
.btn
    padding 9px 24px
    border none
    cursor pointer
    background-color #0f8ec7
    color #fff
    font-weight 900



.main
    /&__pic
        flex()
        position relative
        margin-top 107px
        justify-content center
        img
            position relative
            left 9px
        /&__title
            position absolute
            text-align center
            color #0a6087
            font-weight bold
            text-transform uppercase
            &:hover
                color #ffd33c
                trans()
            &:nth-child(2)
                left: 261px;
                top: 126px;
            &:nth-child(3)
                left: 338px;
                top: 41px;
            &:nth-child(4)
                left: 489px;
                top: -46px;
            &:nth-child(5)
                left: 669px;
                top: 15px;
            &:nth-child(6)
                left: 815px;
                top: 71px;
            &:nth-child(7)
                left: 949px;
                top: 103px;
            &:nth-child(8)
                right: 343px;
                bottom: -4px;
            &:nth-child(9)
                right: 526px;
                bottom: 16px;
            &:nth-child(10)
                left: 598px;
                bottom: 64px;
            &:nth-child(11)
                left: 460px;
                bottom: 116px;
            &:nth-child(12)
                left: 322px;
                bottom: 156px;

.otrasli
    /&__title
           margin 115px auto 
    /&__container
        margin-top 151px
        row-flex()
        flex-wrap wrap
        margin-bottom -100px
    /&__item
        col()
        position relative
        margin-bottom 100px
        padding 54px 30px 20px
        text-align center
        box-shadow 0 0 54px -10px
        size(4)
        /&__title
            margin-bottom 0
            font-size 17px
            text-transform uppercase
            /&::before, /&::after
                content ""
                position absolute
                width 108px
                height 108px
                left 50%
                top -55px
                border-radius 50%
                transform translatex(-50%)
                background-color #0f8ec7
            /&::before
                 background-image url("../img/icon-rob.png")
                 background-repeat no-repeat
                 background-position center
            /&.sud::before
                background-image url("../img/icon-sud.png")
            /&.oc::before
                background-image url("../img/icon-2home.png")
            /&.zal::before
                background-image url("../img/icon-home$.png")
            /&.iz::before
                background-image url("../img/icon-sect.png")
            /&.ush::before
                background-image url("../img/icon-gor.png")
            /&::after
                background-color #e9ebec
                top -50px
                z-index -1
        /&__text
            margin-top 8px
    /&__btn
        display block
        margin-left auto
        margin-right auto
        padding 17px 31px
        margin-top 59px
        text-transform uppercase
.title-block
    position relative
    width 502px
    padding 7px 0
    background-color white
    /&__title
        display inline-block
        margin-left 52px
        margin-bottom 0
        font-size 28px
        color #0f8ec7
        text-transform uppercase
        font-weight bold
        svg
            margin-right 11px
            vertical-align middle
            transform translateY(-2px)
    /&__text
        margin-top 20px
        margin-bottom 36px
        font-size 23px
        font-weight 300
        text-align center
    /&:before
        content ""
        position absolute
        height 20px
        width 100%
        top -9px
        background-color #fff
    /&::after
        display block
        content ""
        position absolute
        top -33px
        left 189px
        border 10px solid #ffd33c
        width 377px
        height 261px
        z-index -1
a
    text-decoration none

.container
    max-width 1170px
    margin 0 auto
header
    overflow hidden
.head-foot
    row-flex()
    align-items center
    /&__logo, /&__menu, /&__svyz, /&__btn
        col()
    /&__logo
        size(2)
    /&__menu
        size(6)
        a
            color black
    /&__svyz
        size(2)
        padding-top 15px
        text-align right
    /&__btn
        size(2)
        margin-top 3px
    /&__logo
        font-size 41px
        font-weight bold
        font-style italic

.logo_blue
    color #0f8ec7
.menu
    flex()
    margin-left -10.5px
    margin-right -10.5px
    justify-content flex-end
    font-weight bold
    text-transform uppercase
    /&__item
        position relative
        margin-left 10.5px
        margin-right 10.5px
        /&::after
            width 0
            height 2px
            position absolute
            left 0
            bottom -3.3px
            content ''
            background-color #0f8ec7
